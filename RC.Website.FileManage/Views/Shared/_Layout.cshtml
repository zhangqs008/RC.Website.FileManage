<html>
<head>
    <title>上传文件管理系统</title>
    <link href="/Scripts/jquery-easyui-1.5.5.7/themes/default/easyui.css" rel="stylesheet"
        type="text/css" />
    <link href="/Scripts/jquery-easyui-1.5.5.7/themes/icon.css" rel="stylesheet" type="text/css" />
    <link href="/Scripts/jquery-easyui-1.5.5.7/themes/icons-custom.css" rel="stylesheet"
        type="text/css" />
    <script src="/Scripts/jquery-easyui-1.5.5.7/jquery.min.js" type="text/javascript"></script>
    <script src="/Scripts/jquery-easyui-1.5.5.7/jquery.easyui.min.js" type="text/javascript"></script>
    <script src="/Scripts/jquery-easyui-1.5.5.7/locale/easyui-lang-zh_CN.js" type="text/javascript"></script>
    <script src="/Scripts/jquery-easyui-1.5.5.7/jquery.ezsyui.plugin.tab.js" type="text/javascript"></script>
    <script src="/Scripts/rc.msg.js" type="text/javascript"></script>
    <script src="/Scripts/rc.loading.js" type="text/javascript"></script>
    <script src="/Scripts/rc.ajax.js" type="text/javascript"></script>
    <style type="text/css">
        .datagridMenu { margin: 0; padding: 0; }
        .datagridMenu li { float: left; list-style: none; margin-right: 2px; }
    </style>
</head>
<body class="easyui-layout">
    @RenderBody()
    <script type="text/javascript">        //窗口缩放时，重绘布局控件尺寸
        var settime = null;
        function redraw() {
            if (window.customResize) {
                customResize(); //自定义缩放函数，页面若使用多个布局控件，需自定义缩放函数处理
            } else {
                var width = $(window).width();
                var height = $(window).height();
                $('.easyui-panel:not(.notResize)').panel('resize', { width: width, height: height });
                $('.easyui-layout:not(.notResize)').layout('resize', { width: width, height: height });
                $('.easyui-treegrid:not(.notResize)').treegrid('resize', { width: width, height: height });
                $('.easyui-datagrid:not(.notResize)').datagrid('resize', { width: width, height: height });
            }
        }

        $(function () {
            redraw();
            $(window).resize(function () {
                if (settime != null)
                    clearTimeout(settime);
                settime = setTimeout("redraw()", 100);
            });
        });
    </script>
</body>
</html>
